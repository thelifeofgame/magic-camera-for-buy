<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_bottom_bar"
    android:layout_width="fill_parent"
    android:layout_height="150dip"
    android:background="#00000000"
    android:baselineAligned="false"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="5.0" >

    <ImageButton
        android:id="@+id/clickandhide"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/ic_choose_face"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="@dimen/bottom_bar_height"
      android:orientation="horizontal">
    <FrameLayout
        android:id="@+id/videoicon"
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >


        <ImageView
           
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:focusable="false"
            android:src="@drawable/ic_choose_filter" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/takephoto"
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/btn_shutter_record"
            android:layout_width="@dimen/shutter_bottom_size"
            android:layout_height="@dimen/shutter_bottom_size"
            android:background="@drawable/ic_panorama_fish_eye_black_36dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/btn_shutter_camera"
            android:layout_width="@dimen/shutter_bottom_size"
            android:layout_height="@dimen/shutter_bottom_size"
            android:background="@drawable/ic_panorama_fish_eye_white_36dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/btn_switch_mode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/composer_button"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/ic_navigate_next_white_36dp" />
    </RelativeLayout>
 </LinearLayout>
 <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="40dip"
     >
     
 </LinearLayout>
</LinearLayout>